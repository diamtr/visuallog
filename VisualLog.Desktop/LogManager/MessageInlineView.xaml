<UserControl x:Class="VisualLog.Desktop.MessageInlineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualLog.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
  <UserControl.Resources>
    <ResourceDictionary>
      <local:VisibilityBoolConverter x:Key="VisibilityBoolConverter" />
    </ResourceDictionary>
  </UserControl.Resources>
  <Grid>
    <TextBlock Text="{Binding Message.RawValue}"
               Visibility="{Binding OnlyRaw, Converter={StaticResource VisibilityBoolConverter}}" />
  </Grid>
</UserControl>
