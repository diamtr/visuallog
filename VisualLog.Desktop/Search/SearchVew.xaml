<UserControl x:Class="VisualLog.Desktop.Search.SearchVew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualLog.Desktop.Search"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="600" d:Background="White">
  
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
      <DataTemplate DataType="{x:Type local:SearchRequestViewModel}">
        <local:SearchRequestView/>
      </DataTemplate>
      <DataTemplate DataType="{x:Type local:SearchResponseViewModel}">
        <local:SearchResponseView/>
      </DataTemplate>
    </ResourceDictionary>
  </UserControl.Resources>
  
  <Grid Background="White">
    <StackPanel Orientation="Vertical">
      <TextBlock Text="SearchViewModel" HorizontalAlignment="Center"/>
      <ContentControl Content="{Binding SearchRequestViewModel}"/>
      <ContentControl Content="{Binding SearchResponseViewModel}"/>
    </StackPanel>
  </Grid>
  
</UserControl>
