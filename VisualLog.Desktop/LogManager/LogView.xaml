<UserControl x:Class="VisualLog.Desktop.LogManager.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:root="clr-namespace:VisualLog.Desktop"
             xmlns:logmgr="clr-namespace:VisualLog.Desktop.LogManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <UserControl.Resources>
    <ResourceDictionary>
      <root:VisibilityBoolConverter x:Key="VisibilityBoolConverter"/>

      <DataTemplate DataType="{x:Type logmgr:MessageInlineViewModel}">
        <logmgr:MessageInlineView />
      </DataTemplate>
    </ResourceDictionary>
  </UserControl.Resources>
  
  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <ComboBox Grid.Column="1"
                ItemsSource="{Binding LogFormats}"/>

      <StackPanel Grid.Column="2"
                  Orientation="Horizontal"
                  Margin="15,0,15,0">
        <ToggleButton x:Name="ShowFormattedMessageVerticalButton"
                      Content="|"
                      Width="25"
                      IsChecked="{Binding ShowFormattedMessageVertical}"/>
        <ToggleButton x:Name="ShowFormattedMessageHorizontalButton"
                      Content="--"
                      Width="25"
                      IsChecked="{Binding ShowFormattedMessageHorizontal}"/>
      </StackPanel>

      <ComboBox Grid.Column="3"
                ItemsSource="{Binding Encodings}"
                SelectedItem="{Binding SelectedEncoding}"/>

    </Grid>
    
    <ListView Grid.Row="1"
              ItemsSource="{Binding LogMessages}"
              SelectionMode="Extended"/>

    <Grid Grid.Row="1"
          Visibility="{Binding ElementName=ShowFormattedMessageVerticalButton, Path=IsChecked, Converter={StaticResource VisibilityBoolConverter}}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="1">
        <Border Margin="20"
                Background="Pink"/>
      </Grid>
    </Grid>

    <Grid Grid.Row="1"
          Visibility="{Binding ElementName=ShowFormattedMessageHorizontalButton, Path=IsChecked, Converter={StaticResource VisibilityBoolConverter}}">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid Grid.Row="1">
        <Border Margin="20"
                Background="Pink"/>
      </Grid>
    </Grid>

  </Grid>
</UserControl>
