<UserControl x:Class="VisualLog.Desktop.LogManager.SelectedMessagesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualLog.Desktop.LogManager"
             xmlns:logmgr="clr-namespace:VisualLog.Desktop.LogManager"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             d:Background="White">
  <UserControl.Resources>
    <ResourceDictionary>

      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
      
      <DataTemplate DataType="{x:Type logmgr:MessagePanelViewModel}">
        <logmgr:MessagePanelView />
      </DataTemplate>
    </ResourceDictionary>
  </UserControl.Resources>

  <Border Background="{StaticResource PanelBackgroundBrush}"
          TextBlock.Foreground="{StaticResource ForegroundBrush}"
          CornerRadius="15">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      
      <Grid Grid.Row="0"
            Margin="0,5,0,10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Margin="7,0,0,0">
          <Button Style="{StaticResource SelectedLinesMenuButton}"
                  Command="{Binding ShowPreviousMessageCommand}" >
            <svgc:SvgViewbox Source="pack://application:,,,/img/SelectedLines/up.svg"/>
          </Button>
          <Button Style="{StaticResource SelectedLinesMenuButton}"
                  Command="{Binding ShowNextMessageCommand}"
                  Margin="15,0,0,0">
            <svgc:SvgViewbox Source="pack://application:,,,/img/SelectedLines/down.svg"/>
          </Button>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="15,0,15,0">
          <TextBlock Text="{Binding Position}" />
          <TextBlock Text=" / " />
          <TextBlock Text="{Binding Messages.Count}" />
        </StackPanel>

        <Border Grid.Column="2" HorizontalAlignment="Center" Style="{StaticResource ActionButtonBorder}">
          <StackPanel Orientation="Horizontal">
            <Button Command="{Binding CopyAllMessagesCommand}"
                    Content="Copy All"
                    Style="{StaticResource ActionButton}"/>
          </StackPanel>
        </Border>

        <Border Grid.Column="3"
                Style="{StaticResource ActionButtonBorder}"
                Margin="0,0,10,0">
          <Button Style="{StaticResource ActionButton}" Padding="5,2"
                  Command="{Binding CloseSelectedMessagesCommand}">
            <Path Data="M 1 1 L 9 9 M 1 9 L 9 1"
                  Stroke="{StaticResource ForegroundBrush}"
                  StrokeThickness="2"
                  HorizontalAlignment="Center"/>
          </Button>
        </Border>
        
      </Grid>

      <Grid Grid.Row="1"
            Margin="10">
        <ListView ItemsSource="{Binding MessagesViewModels}"
                  SelectedIndex="{Binding Index}"
                  SelectionMode="Single"
                  Focusable="False"
                  MaxHeight="200"/>
      </Grid>
      
      <Border Grid.Row="2"
              Margin="10">
        <ContentControl Content="{Binding MessagePanelViewModel}"/>
      </Border>
      
    </Grid>
  </Border>
  
  
</UserControl>
