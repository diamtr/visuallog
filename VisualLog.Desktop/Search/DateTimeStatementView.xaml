<UserControl x:Class="VisualLog.Desktop.Search.DateTimeStatementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualLog.Desktop.Search"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800" d:Background="Gray">
  <Grid>
    <StackPanel Orientation="Horizontal">
      <ComboBox MinWidth="100"
                ItemsSource="{Binding DateTimeStatementConditions}"
                SelectedItem="{Binding SelectedDateTimeStatementCondition}"/>
      <TextBox MinWidth="300" Text="{Binding DateTimeString}"/>
    </StackPanel>
  </Grid>
</UserControl>
