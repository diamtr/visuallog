<UserControl x:Class="VisualLog.Desktop.Search.LogSearchResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualLog.Desktop.Search"
             xmlns:conv="clr-namespace:VisualLog.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="450" d:Background="White">

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
      <conv:VisibilityBoolConverter x:Key="VisibilityBoolConverter" />
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid>
    
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0" Visibility="{Binding ShowHeader, Converter={StaticResource VisibilityBoolConverter}}">
      
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <ToggleButton Grid.Column="0" Content="show" IsChecked="{Binding ShowEntries}"/>
      <TextBlock Grid.Column="1" Text="{Binding LogViewModel.LogPath}"/>
      
    </Grid>

    <Grid Grid.Row="1" Visibility="{Binding ShowEntries, Converter={StaticResource VisibilityBoolConverter}}">
      <TextBlock Text="SearchEntries"/>
    </Grid>
    
  </Grid>
  
</UserControl>
